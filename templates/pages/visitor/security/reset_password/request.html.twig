{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}
{% block  description %}Réinitialisation du mot de passe{% endblock %}
{% block keywords %}Réinitialisation mot de passe, oublie mot de passe{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class=" text-center my-5 display-5">Réinitialisation du mot de passe</h1>

    <div class= "container my-5">
        <div class="row">
            <div class="col-md-6 mx-auto shadow p-5">
                    {{ form_start(requestForm) }}
                        <div class= "mb-3">
                                <label for="reset_password_request_form_email">Email</label>
                                <div class="text-danger">{{ form_errors(requestForm.email) }}</div>
                                {{ form_widget(requestForm.email, {'attr':{'class':'form-control', 'autofocus':'autofocus'}}) }}
                                <small>
                                <em>Entrez votre adresse email, pour recevoir le lien de réinitialisation du mot de passe.</em>
                                </small>
                        </div>
                        <div class="mb-3">
                                <button formnovalidate class="btn btn-warning">Envoyer</button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
